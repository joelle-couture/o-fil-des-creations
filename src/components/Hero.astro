<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
    padding-top: 80px;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: linear-gradient(135deg, var(--secondary) 0%, rgba(212, 165, 116, 0.2) 100%);
    clip-path: polygon(20% 0, 100% 0, 100% 100%, 0% 100%);
    z-index: -1;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .hero-badge {
    display: inline-block;
    background: var(--secondary);
    color: var(--accent);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 20px;
  }

  .hero-title {
    font-size: 3.5rem;
    line-height: 1.2;
    margin-bottom: 25px;
    color: var(--dark);
  }

  .highlight {
    color: var(--primary);
    position: relative;
  }

  .highlight::after {
    content: '';
    position: absolute;
    bottom: 5px;
    left: 0;
    width: 100%;
    height: 12px;
    background: rgba(212, 165, 116, 0.3);
    z-index: -1;
    border-radius: 2px;
  }

  .hero-text {
    font-size: 1.15rem;
    color: var(--accent);
    margin-bottom: 35px;
    line-height: 1.8;
  }

  .hero-buttons {
    display: flex;
    gap: 15px;
    margin-bottom: 50px;
  }

  .hero-stats {
    display: flex;
    gap: 40px;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--accent);
  }

  .hero-visual {
    position: relative;
  }

  .hero-image-wrapper {
    position: relative;
  }

  .hero-shape {
    position: absolute;
    top: -20px;
    right: -20px;
    width: 100%;
    height: 100%;
    background: var(--primary);
    border-radius: 30px;
    opacity: 0.2;
  }

  .hero-placeholder {
    position: relative;
    background: linear-gradient(135deg, var(--secondary) 0%, #e8d5c4 100%);
    border-radius: 30px;
    height: 450px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 15px;
    border: 3px dashed var(--primary);
  }

  .hero-image {
    position: relative;
    width: 100%;
    height: 450px;
    object-fit: cover;
    border-radius: 30px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  .placeholder-icon {
    font-size: 4rem;
  }

  .placeholder-text {
    color: var(--accent);
    font-weight: 500;
  }

  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .floating-item {
    position: absolute;
    font-size: 2rem;
    animation: float 4s ease-in-out infinite;
    animation-delay: var(--delay);
  }

  .floating-item:nth-child(1) { top: 10%; left: -10%; }
  .floating-item:nth-child(2) { top: 60%; right: -5%; }
  .floating-item:nth-child(3) { bottom: 10%; left: 20%; }

  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(10deg); }
  }

  @media (max-width: 1100px) {
    .hero .container {
      gap: 40px;
    }

    .hero-title {
      font-size: 3rem;
    }
  }

  @media (max-width: 968px) {
    .hero .container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 50px;
    }

    .hero {
      padding-top: 100px;
      min-height: auto;
      padding-bottom: 60px;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-badge {
      font-size: 0.85rem;
    }

    .hero-text {
      font-size: 1.05rem;
    }

    .hero-buttons {
      justify-content: center;
      flex-wrap: wrap;
    }

    .hero-stats {
      justify-content: center;
      gap: 30px;
    }

    .hero-visual {
      order: -1;
      max-width: 400px;
      margin: 0 auto;
    }

    .hero-placeholder {
      height: 280px;
    }

    .hero-bg {
      width: 100%;
      clip-path: none;
      opacity: 0.4;
    }

    .floating-elements {
      display: none;
    }
  }

  @media (max-width: 600px) {
    .hero {
      padding-top: 90px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-text {
      font-size: 1rem;
      margin-bottom: 25px;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
      gap: 12px;
      margin-bottom: 35px;
    }

    .hero-buttons .btn {
      width: 100%;
      max-width: 280px;
    }

    .hero-stats {
      flex-wrap: wrap;
      gap: 20px;
    }

    .stat {
      min-width: 80px;
    }

    .stat-number {
      font-size: 1.6rem;
    }

    .stat-label {
      font-size: 0.75rem;
    }

    .hero-placeholder {
      height: 220px;
      border-radius: 20px;
    }

    .hero-shape {
      top: -10px;
      right: -10px;
      border-radius: 20px;
    }

    .placeholder-icon {
      font-size: 3rem;
    }
  }

  @media (max-width: 380px) {
    .hero-title {
      font-size: 1.7rem;
    }

    .hero-stats {
      gap: 15px;
    }
  }
</style>
