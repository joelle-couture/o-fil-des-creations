<style>
  .gallery {
    background: var(--light);
  }

  .section-badge {
    display: block;
    text-align: center;
    background: var(--secondary);
    color: var(--primary);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    margin: 0 auto 20px;
    width: fit-content;
  }

  .gallery-filters {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 50px;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 10px 25px;
    border: 2px solid var(--secondary);
    background: transparent;
    border-radius: 50px;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    color: var(--accent);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: var(--primary);
    border-color: var(--primary);
    color: var(--white);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .gallery-item {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: translateY(-10px);
  }

  .item-image {
    height: 320px;
    background: linear-gradient(135deg, var(--secondary) 0%, #e8d5c4 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border: 3px dashed var(--primary);
    border-radius: 20px;
  }

  .item-image.has-image {
    border: none;
    background: none;
  }

  .item-image.has-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 20px;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .item-image.has-image img {
    transform: scale(1.05);
  }

  .item-emoji {
    font-size: 4rem;
  }

  .item-placeholder {
    color: var(--accent);
    font-size: 0.9rem;
  }

  .item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 25px;
    background: linear-gradient(to top, rgba(44, 36, 32, 0.95) 0%, transparent 100%);
    color: var(--white);
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.3s ease;
  }

  .gallery-item:hover .item-overlay {
    transform: translateY(0);
    opacity: 1;
  }

  .item-category {
    display: inline-block;
    background: var(--primary);
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 0.8rem;
    margin-bottom: 10px;
  }

  .item-title {
    font-size: 1.3rem;
    margin-bottom: 0;
  }

  .gallery-cta {
    text-align: center;
    margin-top: 60px;
    padding: 40px;
    background: var(--white);
    border-radius: 20px;
    box-shadow: var(--shadow);
  }

  .gallery-cta p {
    font-size: 1.2rem;
    color: var(--accent);
    margin-bottom: 25px;
  }

  .social-links {
    display: flex;
    gap: 15px;
    justify-content: center;
  }

  .social-link {
    width: 50px;
    height: 50px;
    background: var(--secondary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    transition: all 0.3s ease;
    box-shadow: var(--shadow);
  }

  .social-link:hover {
    background: var(--primary);
    color: var(--white);
    transform: translateY(-3px);
  }

  .gallery-cta-buttons {
    display: flex;
    gap: 15px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .gallery-cta-buttons .btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
  }

  .btn-icon {
    font-size: 1.1rem;
  }

  @media (max-width: 968px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .item-image {
      height: 280px;
    }

    .item-overlay {
      transform: translateY(0);
      opacity: 1;
    }

    .gallery-cta {
      margin-top: 50px;
      padding: 35px 25px;
    }
  }

  @media (max-width: 768px) {
    .gallery-filters {
      gap: 10px;
    }

    .filter-btn {
      padding: 8px 18px;
      font-size: 0.85rem;
    }

    .item-overlay {
      transform: translateY(0);
      padding: 20px;
    }

    .item-title {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 600px) {
    .gallery-grid {
      grid-template-columns: 1fr;
      gap: 25px;
    }

    .item-image {
      height: 260px;
    }

    .gallery-cta {
      padding: 30px 20px;
      border-radius: 15px;
    }

    .gallery-cta p {
      font-size: 1rem;
    }

    .gallery-cta-buttons {
      flex-direction: column;
      gap: 12px;
    }

    .gallery-cta-buttons .btn {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .gallery-filters {
      justify-content: flex-start;
      overflow-x: auto;
      padding-bottom: 10px;
      -webkit-overflow-scrolling: touch;
    }

    .filter-btn {
      flex-shrink: 0;
    }

    .item-image {
      height: 240px;
      border-radius: 15px;
    }

    .gallery-item {
      border-radius: 15px;
    }
  }
</style>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const items = document.querySelectorAll('.gallery-item');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      const filter = btn.dataset.filter;
      
      items.forEach(item => {
        if (filter === 'tous' || item.dataset.category === filter) {
          (item as HTMLElement).style.display = 'block';
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script>
