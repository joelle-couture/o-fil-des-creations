<style>
  .gallery {
    background: var(--light);
  }

  .section-badge {
    display: block;
    text-align: center;
    background: var(--secondary);
    color: var(--primary);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    margin: 0 auto 20px;
    width: fit-content;
  }

  .gallery-filters {
    display: flex;
    justify-content: center;
    gap: 15px;
    margin-bottom: 50px;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 10px 25px;
    border: 2px solid var(--secondary);
    background: transparent;
    border-radius: 50px;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    color: var(--accent);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-btn:hover,
  .filter-btn.active {
    background: var(--primary);
    border-color: var(--primary);
    color: var(--white);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }

  .gallery-item {
    position: relative;
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover {
    transform: translateY(-10px);
  }

  .item-image {
    height: 320px;
    background: linear-gradient(135deg, var(--secondary) 0%, #e8d5c4 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border: 3px dashed var(--primary);
    border-radius: 20px;
  }

  .item-emoji {
    font-size: 4rem;
  }

  .item-placeholder {
    color: var(--accent);
    font-size: 0.9rem;
  }

  .item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 25px;
    background: linear-gradient(to top, rgba(44, 36, 32, 0.95) 0%, transparent 100%);
    color: var(--white);
    transform: translateY(60px);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .item-overlay {
    transform: translateY(0);
  }

  .item-category {
    display: inline-block;
    background: var(--primary);
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 0.8rem;
    margin-bottom: 10px;
  }

  .item-title {
    font-size: 1.3rem;
    margin-bottom: 15px;
  }

  .item-btn {
    background: transparent;
    border: 2px solid var(--white);
    color: var(--white);
    padding: 8px 20px;
    border-radius: 25px;
    font-family: 'Poppins', sans-serif;
    font-size: 0.85rem;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .item-btn:hover {
    background: var(--white);
    color: var(--dark);
  }

  .gallery-cta {
    text-align: center;
    margin-top: 60px;
    padding: 40px;
    background: var(--white);
    border-radius: 20px;
    box-shadow: var(--shadow);
  }

  .gallery-cta p {
    font-size: 1.2rem;
    color: var(--accent);
    margin-bottom: 20px;
  }

  @media (max-width: 968px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .gallery-grid {
      grid-template-columns: 1fr;
    }

    .item-image {
      height: 250px;
    }
  }
</style>

<script>
  const filterBtns = document.querySelectorAll('.filter-btn');
  const items = document.querySelectorAll('.gallery-item');

  filterBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      filterBtns.forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      const filter = btn.dataset.filter;
      
      items.forEach(item => {
        if (filter === 'tous' || item.dataset.category === filter) {
          (item as HTMLElement).style.display = 'block';
        } else {
          (item as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script>
